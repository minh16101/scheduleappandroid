<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <include
            android:id="@+id/main_toolbar"
            layout="@layout/main_toolbar_delegate"
            app:layout_constraintTop_toTopOf="parent"/>

        <include
            android:id="@+id/main_time"
            layout="@layout/main_time_delegate"
            app:layout_constraintTop_toBottomOf="@+id/main_toolbar"/>

        <include
            android:id="@+id/main_calendar"
            layout="@layout/main_schedule_delegate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_time"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
